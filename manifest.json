{
  "name": "Review monitor",
  "version": "0.1",
  "version_name": "Proof of concept",
  "manifest_version": 2,
  "description": "Monitors user interaction in GitHub code review",
  "permissions": ["*://github.com/*", "https://localhost/*"],
  "icons": {"16": "icon16.bmp",
            "48": "icon48.bmp",
            "128": "icon128.bmp"},
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://github.com/*", "https://stackoverflow.com/questions/*"],
      "js": ["jquery.js", "contentScript.js"]
    }
  ]
}